			self assert: anError messageText = Cashier cartIsEmpty ]	! !!TusLibrosTests methodsFor: 'tests' stamp: 'mg 10/30/2017 18:06'!test01NewCartIsEmpty	| aCart aCatalog |	aCatalog := OrderedCollection new .	aCart := Cart withCatalog: aCatalog .		self assert: aCart numberOfProducts equals: 0.! !